<div class="container body-content">
        <div class=".col-md-6 .col-md-offset-3">
            <div class="panel panel-default" id="article-content"></div>
        </div>
    </div>
    <script id="article-template" type="text/template">
        {{if reason === "success"}}
            <div class="panel-body">
                <h1 class="title">{{@@ result.title}}</h1>
                <p class="author">{{@@ result.author}}</p>
                <div class="content">
                    {{@@ result.content}}
                </div>
                <div class="random"><button type="button" class="btn btn-default btn-lg"></button></div>
            </div>
        {{/if}}
    </script>